{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block login %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>


        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-info mt-2">edit</a>
        <br>

        <a href="{{ path('app_user_index') }}" class="btn btn-outline-warning mt-2">back to list</a> 

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
