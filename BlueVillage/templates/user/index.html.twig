{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block login %}

    <div class="container" id="bodylogin">

    <h1>Interfaces des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline-info pr-2">show</a>
                    {# <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-info pr-2">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_user_new') }}" class="btn btn-outline-success">Create new</a> #}

    </div>
{% endblock %}
